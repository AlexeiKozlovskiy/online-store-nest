// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id         String   @id @default(uuid())
  name       String
  stock      Int
  collection Int
  price      Float
  color      String
  size       Int
  favorite   Boolean?
  category   String
  images     String[]
}

model User {
  id       String   @id @default(uuid())
  email    String   @unique
  login    String?
  password String?
  picture  String?
  isGoogle Boolean?
}
